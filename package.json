{
    "name": "linter-codeclimate",
    "displayName": "linter-codeclimate",
    "description": "Linter Plugin for CodeClimate CLI",
    "version": "0.0.1",
    "publisher": "monovaldes",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
      "onLanguage:ruby",
      "onLanguage:javascript",
      "onLanguage:css",
      "onLanguage:java",
      "onLanguage:php"
    ],
    "main": "./out/extension",
    "contributes": {
      "languages": [
        {
          "id": "ruby",
          "aliases": ["Ruby", "ruby"],
          "extensions": [".rb",".erb"]
        },
        {
          "id": "javascript",
          "aliases": ["Javascript", "javascript"],
          "extensions": [".js",".jsx"]
        },
        {
          "id": "css",
          "aliases": ["Sass", "sass", "Css", "css"],
          "extensions": [".css",".scss"]
        },
        {
          "id": "java",
          "aliases": ["Java", "java"],
          "extensions": [".java"]
        },
        {
          "id": "php",
          "aliases": ["PHP", "php"],
          "extensions": [".php"]
        }
      ],
      "configuration": {
        "type": "object",
        "title": "Codeclimate Linter Config",
        "properties": {
          "linter_codeclimate.enabled": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
